{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "browser": true,
    "mocha": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "array-callback-return": [
      0
    ],
    "eqeqeq": [
      "error",
      "always"
    ],
    "indent": [
      "warn",
      2
    ],
    "no-template-curly-in-string": "error",
    "semi": [
      "error",
      "always"
    ],
    "array-bracket-spacing": [
      "error",
      "never"
    ],
    "block-spacing": [
      "error",
      "always"
    ],
    "brace-style": [
      "error",
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "camelcase": [
      0
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "comma-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "comma-style": [
      "error",
      "last"
    ],
    "computed-property-spacing": [
      "error",
      "never"
    ],
    "func-call-spacing": [
      "error",
      "never"
    ],
    "keyword-spacing": [
      "error",
      {
        "before": true,
        "after": true
      }
    ],
    "max-len": [
      "warn",
      180
    ],
    "no-duplicate-imports": "error",
    "id-length": "error",
    "id-blacklist": [
      "error",
      "data",
      "err",
      "e",
      "cb",
      "callback",
      "payload",
      "obj",
      "arr"
    ],
    "max-depth": [
      "warn",
      4
    ],
    "no-case-declarations": [
      0
    ],
    "no-console": [
      0
    ],
    "no-unused-vars": [
      0
    ],
    "no-undef": [
      0
    ]
  },
  "globals": {
    "expect": true
  }
}